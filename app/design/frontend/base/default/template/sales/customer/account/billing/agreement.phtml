/* @var $this Mage_Sales_Block_Customer_Account_Billing_Agreement */
?>
<div class="page-title">
    <h1><?php echo $this->__('Billing Agreements') ?></h1>
</div>
<div class="dashboard">
    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>

    <?php $paymentMethods = $this->getPaymentMethodOptions() ?>
    <?php if ($paymentMethods): ?>
        <h2 class="box-title"><?php echo $this->__('New Billing Agreement') ?></h2>
        <div class="info-box">
            <div class="box-content">
                <form action="<?php echo $this->getCreateUrl() ?>" method="post">
                    <select id="payment_method" name="payment_method">
                        <option value=""><?php echo $this->__('-- Please Select --') ?></option>
                        <?php foreach ($paymentMethods as $code => $title): ?>
                            <option value="<?php echo $code ?>"><?php echo $title ?></option>
                        <?php endforeach; ?>
                    </select>
                    <button type="submit" class="button" title="<?php echo $this->__('Create') ?>">
                        <span><span><?php echo $this->__('Create') ?></span></span>
                    </button>
                    <em><?php echo $this->__('You will be redirected to the payment system website.') ?></em>
                </form>
            </div>
        </div>
    <?php endif; ?>

    <h2><?php echo $this->__('Billing Agreements'); ?></h2>
    <div class="box">
        <?php $billingAgreements = $this->getBillingAgreements(); ?>
        <?php if (count($billingAgreements) > 0): ?>
            <table id="billing-agreements" class="data-table">
                <col width="1" />
                <col />
                <col width="1" />
                <col width="1" />
                <col width="1" />
                <col width="1" />
                <thead>
                    <tr>
                        <th><?php echo $this->__('Payment Method'); ?></th>
                        <th><?php echo $this->__('Reference ID'); ?></th>
                        <th><?php echo $this->__('Status'); ?></th>
                        <th><?php echo $this->__('Created At'); ?></th>
                        <th><?php echo $this->__('Updated At'); ?></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <?php foreach($billingAgreements as $item): ?>
                    <tr>
                        <td class="a-right"><?php echo $this->getItemValue($item, 'payment_method_label') ?></td>
                        <td class="a-left"><?php echo $this->getItemValue($item, 'reference_id') ?></td>
                        <td class="a-left"><?php echo $this->getItemValue($item, 'status') ?></td>
                        <td class="a-right"><span class="nobr"><?php echo $this->getItemValue($item, 'created_at') ?></span></td>
                        <td class="a-center"><span class="nobr"><?php echo $this->getItemValue($item, 'updated_at') ?></span></td>
                        <td class="a-right"><a href="<?php echo $this->getItemValue($item, 'edit_url') ?>"><?php echo $this->__('View') ?></a></td>
                    </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
            <script type="text/javascript">decorateTable('billing-agreements')</script>
        <?php else: ?>
            <p><?php echo $this->__('There are no billing agreements yet.')?></p>
        <?php endif; ?>
    </div>

</div>
